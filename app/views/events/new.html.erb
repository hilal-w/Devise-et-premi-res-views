<%= form_tag url_for(controller:'events', action:'create'), method:'post' do %>
  <div class="form-row">
    <div class="form-group form-group col-md-6">
      <label>Titre</<label>
        <%=text_field_tag 'title', nil, class:'form-control'%>
    </div>
    <div class="form-group form-group col-md-6">
        <label>Location</label>
        <%=text_field_tag 'location', nil,class:'form-control'%>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label>Date de debut : </<label>
      <%=date_field_tag 'start_date', '01/01/2014', class: 'form-control'  %>
    </div>
    <div class="form-group col-md-4">
        <label>Duration</label>
        <%=number_field_tag 'duration', nil,class:'form-control'%>
    </div>
    <div class="form-group col-md-4">
        <label>Price</label>
        <%=number_field_tag 'price', nil,class:'form-control'%>
    </div>
  </div>
  <div class="form-group">
      <label>Description</label>
      <%=text_area_tag 'description', nil,class:'form-control'%>
  </div>
  <div class="form-group row">
    <div class="col-sm-5">
      <%= submit_tag "Créer l'evenement",class:"btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
<%end%>

<% if @event.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
