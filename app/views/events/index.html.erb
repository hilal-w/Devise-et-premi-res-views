          <div class="card mb-4 box-shadow">
            <div class="card-body">
              <h2>Titre : <%=@events[index].title%></h2>
              <ul>
                <li>Debut : <%=@events[index].start_date%></li>
                <li>Durée : <%=@events[index].duration%> mn</li>
                <li>Prix : <%=@events[index].price%> €</li>
                <li>Lieu : <%=@events[index].location%></li>
                <li>Crée par : <%=@events[index].admin.first_name%> <%=@events[index].admin.last_name%></li>
              </ul>
              <p class="card-text">Description : <%=@events[index].description%></p>
              <a href="<%=event_path(@events[index].id)%>"><button type="button" class="btn btn-sm btn-outline-primary">View</button></a>
              <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
              <hr class="my-4">
              <div class="d-flex justify-content-between align-items-center">
                <div class="card-body">
                  <small class="text-muted">Crée le : <%=@events[index].created_at%></small><br/>
                  <small class="text-muted">Dernier mise à jour : <%=@events[index].updated_at%></small>
