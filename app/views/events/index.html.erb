<% one = @events.length / 3%>
<% two = @events.length % 3%>
<% index = 0 %>
<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Cree un evenement</h1>
      <p class="lead text-muted">Pour cree un evenent vous pouvez cliquer sur le lien ci-dessous</p>
      <p>
        <a href="<%=new_event_path%>" class="btn btn-primary my-2">Go</a>
      </p>
    </div>
  </section>
  <div class="album py-5 bg-light">
